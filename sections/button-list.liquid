{{ 'marquee.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_st = section.settings
  assign section_width = section_st.section_width
  assign color_scheme = section_st.color_scheme
  if section_st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign column_gap = section_st.column_gap
  assign items_per_row_mobile = section_st.items_per_row_mobile
  assign heading = section_st.heading
  assign description = section_st.description
  assign show_arrow = section_st.show_arrow
  assign carousel_pagination = section_st.carousel_pagination
  assign infinite = section_st.infinite
  assign autoplay = section_st.autoplay
  assign autorotate_speed = section_st.autorotate_speed
  assign reveal = section_st.reveal
  assign display_mode = section_st.display_mode
  assign items_per_row = section_st.items_per_row
  assign header_size = ''
  if section_st.header_size == 'small'
    assign header_size = 'h3'
  elsif section_st.header_size == 'large'
    assign header_size = 'h1-size'
  endif
  if section_st.items_per_row_mobile > 1 and section_st.items_per_row_mobile < 2
    assign data_free_scroll = 'true'
  elsif section_st.items_per_row_mobile > 2 and section_st.items_per_row_mobile < 3
    assign data_free_scroll = 'true'
  endif
  assign image_width = section_st.image_width
  assign scroll_animation = settings.scroll_animation
  assign speed = section_st.speed
  assign font_size = section_st.font_size
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }}; 
  --swiper-width:3rem;
{%- endcapture -%}
{%- capture col_style -%}
 {% if display_mode == 'grid' %} {% if section_st.section_width == 'full_width' %}--bs-gutter-x:0;{% endif %}{% endif %}
--col-desktop: {{ items_per_row }};--col-number:{{ items_per_row_mobile }};{% if items_per_row > 3 %}--col-tablet: 3;{% else %}--col-tablet: {{ items_per_row }};{% endif %}
{% if column_gap < 15 %}--col-gap: {{ column_gap }}px;{% else %}--col-gap: 15px;--col-gap-desktop: {{  column_gap }}px;{% endif %}--repeat: {{ section.blocks.size }}; --col-mobile: {{ items_per_row_mobile }}
{%- endcapture -%}
<div
  class="section{% if section_st.padding_top < 30 %} pt-min{% endif %}{% if section_st.padding_bottom < 30 %} pb-min{% endif %} sec__button-list color-{{ color_scheme }} gradient{{ reset_spacing }}{% if reveal %} overflow-hidden{% endif %}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    {%- if heading != blank or description != blank -%}
      <div class="section__header mb-33 mb-sm-20 text-{{ section_st.header_alignment }}{% if section_st.section_width == 'full_width' %} px-20{% endif %}">
        {%- if section_st.heading != blank -%}
          <h2
            class="section__header-heading {% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }}{% endif %} heading-letter-spacing {{ header_size  }} mt-0{% if section_st.description != blank %} mb-10{% else %} mb-0{% endif %}"
            style="
              {%- if scroll_animation != 'none' -%}
                --animation-order: 0
              {% endif %}
            "
          >
            {{ section_st.heading }}
          </h2>
        {% endif %}
        {%- if section_st.description != blank -%}
          <div
            class="section__header-des {% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }}{% endif %} rich__text-m0"
            style="
              {%- if scroll_animation != 'none' -%}
                --animation-order: 1
              {% endif %}
            "
          >
            {{ section_st.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}
    {% if section.blocks.size > 0 %}
      {% if display_mode == 'grid' or display_mode == 'scroll' %}
        {% if display_mode == 'grid' %}
          <grid-custom
            class="collection-list--grid grid grid-cols gap{% if section_st.items_per_row_mobile > 1 and section_st.items_per_row_mobile < 2 %} grid_scroll{% elsif section_st.items_per_row_mobile > 2 and section_st.items_per_row_mobile < 3 %} grid_scroll{% endif %}"
            style="{{ col_style | strip | strip_newlines }}"
            data-mobile="{{ items_per_row_mobile }}"
            data-spacing="{{ column_gap }}"
            data-free-scroll="{{ data_free_scroll }}"
          >
            {% for block in section.blocks %}
              {%- liquid
                assign block_st = block.settings
                assign image = block_st.button_image
                assign button_title = block_st.button_title
                assign button_link = block_st.button_link
              -%}
              <div
                class="swiper-slide {% if scroll_animation != 'none' and scroll_animation != null %} scroll-trigger {{ scroll_animation }} {% endif %} {{ settings.hover_effect }}"
                {{ block.shopify_attributes }}
                {%- if scroll_animation != 'none' -%}
                  style="--animation-order: {{  forloop.index }}; height:auto !important;"
                {%- endif -%}
              >
                <div class="flex align-center justify-content-{{ section_st.text_alignment }} h-full">
                  <a
                    aria-label="{{ button_title }}"
                    class="btn-{{ section_st.button_type }} py-custom px-custom relative x-min-value no-underline word-break heading-color {% if font_size > 14 %} fs-medium-list{% else %} fs-custom{% endif %} inline-flex gap-10 align-center"
                    style="--font-size: {{ font_size }};--padding-inline: {{ section_st.content_padding_inline }};--padding-block: {{ section_st.content_padding_block }};"
                    href="{{ button_link }}"
                  >
                    {%- if image != blank or block_st.custom_svg != blank -%}
                      <span
                        class="lh-0{% if image != blank %} w-custom flex-auto {% endif %}"
                        style="--custom-width: {{ image_width }}px"
                      >
                        {%- if image != blank -%}
                          {%- assign image_alt = image.alt | default: 'images' -%}
                          {% render 'responsive-image',
                            type: 'other',
                            image: image,
                            image_alt: image_alt,
                            custom_widths: '185, 120, 60, 30'
                          %}
                        {%- else -%}
                          <span class="custom-svg w-custom w-custom-svg">
                            {{ block_st.custom_svg }}
                          </span>
                        {% endif %}
                      </span>
                    {% endif %}
                    <span class="{{ section_st.font_weight }} lh-normal flex-1">
                      {% if button_title != blank %}
                        {{ button_title }}
                      {% endif %}
                    </span>
                  </a>
                </div>
              </div>
            {% endfor %}
          </grid-custom>
        {% else %}
          <div
            class="marquee flex overflow-hidden"
            style=" {% if column_gap < 15 %}--col-gap: {{ column_gap }}px;{% else %}--col-gap: 15px;--col-gap-desktop: {{  column_gap }}px;{% endif %}; --speed: {{ speed }}s;direction: ltr;"
          >
            {%- for i in (0..5) -%}
              <div class="flex animation-marquee left">
                {% for block in section.blocks %}
                  {%- liquid
                    assign block_st = block.settings
                    assign image = block_st.button_image
                    assign button_title = block_st.button_title
                    assign button_link = block_st.button_link
                  -%}
                  <a
                    aria-label="{{ button_title }}"
                    class="image_scroll whitespace-nowrap btn-{{ section_st.button_type }} py-custom px-custom relative x-min-value no-underline word-break heading-color {% if font_size > 14 %} fs-medium-list{% else %} fs-custom{% endif %} inline-flex gap-10 align-center"
                    style="--font-size: {{ font_size }};--padding-inline: {{ section_st.content_padding_inline }};--padding-block: {{ section_st.content_padding_block }};"
                    href="{{ button_link }}"
                  >
                    {%- if image != blank or block_st.custom_svg != blank -%}
                      <span
                        class="lh-0{% if image != blank %} w-custom flex-auto {% endif %}"
                        style="--custom-width: {{ image_width }}px"
                      >
                        {%- if image != blank -%}
                          {%- assign image_alt = image.alt | default: 'images' -%}
                          {% render 'responsive-image',
                            type: 'other',
                            image: image,
                            image_alt: image_alt,
                            custom_widths: '185, 120, 60, 30'
                          %}
                        {%- else -%}
                          <span class="custom-svg w-custom w-custom-svg">
                            {{ block_st.custom_svg }}
                          </span>
                        {% endif %}
                      </span>
                    {% endif %}
                    <span class="{{ section_st.font_weight }} lh-normal flex-1">
                      {% if button_title != blank %}
                        {{ button_title }}
                      {% endif %}
                    </span>
                  </a>
                {% endfor %}
              </div>
            {%- endfor -%}
          </div>
        {% endif %}
      {% else %}
        {% if section_st.items_per_row_mobile > 1 and section_st.items_per_row_mobile < 2 %}
          <div class="free-scroll">
        {% elsif section_st.items_per_row_mobile > 2 and section_st.items_per_row_mobile < 3 %}
          <div class="free-scroll">
        {% endif %}
        <slide-section
          class="swiper{% if reveal %} reveal_on_scroll{% endif %}  {% if section.index == 1 %} lazy-loading-swiper-before {% endif %}"
          data-section-id="{{ section.id }}"
          data-autoplay="{{ autoplay }}"
          data-effect="slide"
          data-loop="{{ infinite }}"
          data-speed="500"
          data-autoplay-speed="{{ autorotate_speed }}"
          data-spacing="{{ column_gap }}"
          data-mobile="{{ items_per_row_mobile }}"
          data-desktop="{{ items_per_row }}"
          data-tablet="{% if items_per_row > 5 %}4{% elsif items_per_row > 4 %}3{% elsif items_per_row > 3 %}3{% else %}{{ items_per_row }}{% endif %}"
          data-free-scroll="{{ data_free_scroll }}"
          data-pagination-progressbar="{% if carousel_pagination == 'show_progress_bar' %}true{% else %}false{% endif %}"
          style="{{ col_style | strip | strip_newlines }}"
        >
          {% if show_arrow %}
            {%- render 'swiper-navigation' -%}
          {% endif %}
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {%- liquid
                assign block_st = block.settings
                assign image = block_st.button_image
                assign button_title = block_st.button_title
                assign button_link = block_st.button_link
              -%}
              <div
                class="swiper-slide {% if scroll_animation != 'none' and scroll_animation != null %} scroll-trigger {{ scroll_animation }} {% endif %} {{ settings.hover_effect }}"
                {{ block.shopify_attributes }}
                {%- if scroll_animation != 'none' -%}
                  style="--animation-order: {{  forloop.index }}; height:auto !important;"
                {%- endif -%}
              >
                <div class="flex align-center justify-content-{{ section_st.text_alignment }} h-full">
                  <a
                    aria-label="{{ button_title }}"
                    class="btn-{{ section_st.button_type }} py-custom px-custom relative x-min-value no-underline word-break heading-color {% if font_size > 14 %} fs-medium-list{% else %} fs-custom{% endif %} inline-flex gap-10 align-center"
                    style="--font-size: {{ font_size }};--padding-inline: {{ section_st.content_padding_inline }};--padding-block: {{ section_st.content_padding_block }};"
                    href="{{ button_link }}"
                  >
                    {%- if image != blank or block_st.custom_svg != blank -%}
                      <span
                        class="lh-0{% if image != blank %} w-custom flex-auto {% endif %}"
                        style="--custom-width: {{ image_width }}px"
                      >
                        {%- if image != blank -%}
                          {%- assign image_alt = image.alt | default: 'images' -%}
                          {% render 'responsive-image',
                            type: 'other',
                            image: image,
                            image_alt: image_alt,
                            custom_widths: '185, 120, 60, 30'
                          %}
                        {%- else -%}
                          <span class="custom-svg w-custom w-custom-svg">
                            {{ block_st.custom_svg }}
                          </span>
                        {% endif %}
                      </span>
                    {% endif %}
                    <span class="{{ section_st.font_weight }} lh-normal flex-1">
                      {% if button_title != blank %}
                        {{ button_title }}
                      {% endif %}
                    </span>
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>
          {%- if carousel_pagination == 'show_dots'
            or carousel_pagination == 'show_dots_on_mobile'
            or carousel_pagination == 'show_progress_bar'
          -%}
            <div
              class="swiper-pagination flex flex-wrap px-15 lh-1 bottom-30 {% if carousel_pagination == 'show_dots_on_mobile' %} hidden-md{% endif %} justify-content-center"
              style="--swiper-pagination-bottom: 3rem;--swiper-pagination-position: static;"
            ></div>
          {% endif %}
        </slide-section>
        {% if section_st.items_per_row_mobile > 1 and section_st.items_per_row_mobile < 2 %}
          </div>
        {% elsif section_st.items_per_row_mobile > 2 and section_st.items_per_row_mobile < 3 %}
          </div>
        {% endif %}
      {% endif %}
    {% endif %}
  </div>
</div>

