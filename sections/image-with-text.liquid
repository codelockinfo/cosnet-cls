{{ 'banner.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign section_st = section.settings
  assign section_width = section_st.section_width
  assign color_scheme = section_st.color_scheme
  if section_st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign image = section_st.image
  assign image_mobile = section_st.image_mobile | default: image
  assign image_position = section_st.image_position
  assign scroll_animation = settings.scroll_animation
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; --section-pb: {{ section_st.padding_bottom }};
  {%- if section_st.image_height == 'custom' -%}
  --height: {{ section_st.mobile_height }}px;--height-desktop: {{ section_st.desktop_height }}px;
  {% endif %}
{%- endcapture -%}
{%- if section_st.image_height == 'adapt'
  or section_st.image_height != 'adapt'
-%}
  {%- capture style_ratio -%}
    {%- if section_st.image or section_st.image_mobile -%}
      --aspect-ratio: {{ section_st.image.aspect_ratio }}; 
      {%- if section_st.image_mobile -%} --aspect-ratio-mb: {{ section_st.image_mobile.aspect_ratio }};{% endif %}  
      {%- else -%}
      --aspect-ratio: 3/2; --aspect-ratio-mb: 1;
    {% endif %}  
{%- endcapture -%}
{% endif %}
<div
  class="section{% if section_st.padding_top < 30 %} pt-min{% endif %}{% if section_st.padding_bottom < 30 %} pb-min{% endif %} sec__image-with-text color-{{ color_scheme }} gradient{{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ section_width }}">
    <div
      class="sec__inner flex flex-column {% if image_position == 'right' %}flex-md-row-reverse{% else %}flex-md-row{% endif %} gap-30 gap-md-40 align-items-center{% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }} {% endif %}"
    >
      {%- comment -%} Image Column {%- endcomment -%}
      {%- liquid
        assign image_width_percent = section_st.image_width | times: 1
        assign text_width_percent = 100 | minus: image_width_percent
      -%}
      <div
        class="sec__image-column w-full col-md-w-custom"
        style="--col-width: {{ image_width_percent }}%;"
      >
        <div
          class="banner__media w-full overlay-bg rounded{% if section_st.image_height == 'custom' %} overflow-hidden{% endif %}"
          style="{{ style_ratio | strip | strip_newlines }}{% if image != blank %}--point:{{ image.presentation.focal_point }};{% endif %}"
        >
          {%- if image != blank or image_mobile != blank -%}
            {%- assign image_alt = image.alt | default: 'Image' -%}
            {% render 'responsive-image',
              type: 'banner',
              container: section_width,
              image: image,
              image_mobile: image_mobile,
              image_alt: image_alt
            %}
          {%- else -%}
            {%- render 'placeholder-render', class: 'absolute inset-0 w-full h-full object-fit-cover' -%}
          {% endif %}
          {% if section_st.image_link != blank %}
            <a
              class="absolute inset-0 z-10 block"
              aria-label="{{ section_st.heading | default: 'Image link' }}"
              href="{{ section_st.image_link }}"
            ></a>
          {% endif %}
        </div>
      </div>

      {%- comment -%} Text Column {%- endcomment -%}
      <div
        class="sec__text-column w-full col-md-w-custom flex flex-column justify-content-{{ section_st.vertical_alignment }}"
        style="--col-width: {{ text_width_percent }}%;--padding-inline: {{ section_st.content_padding_inline }};--padding-block: {{ section_st.content_padding_block }};"
      >
        <div
          class="sec__content-inner py-custom px-custom text-{{ section_st.content_alignment_mobile }} text-md-{{ section_st.content_alignment }}{% if section_st.content_padding_inline < 15 %} min-value{% endif %}"
        >
          {%- for block in section.blocks -%}
            {%- liquid
              assign block_st = block.settings
              assign mb_custom = ''
              if block_st.spacing_bottom > 41
                assign mb_custom = 'mb-big'
              elsif block_st.spacing_bottom > 30
                assign mb_custom = 'mb-medium'
              else
                assign mb_custom = 'mb-custom'
              endif
              assign uppercase = ''
              if block_st.uppercase
                assign uppercase = 'uppercase'
              endif
              assign fs_custom = ''
              if block_st.font_size > 41
                assign fs_custom = 'fs-big'
              elsif block_st.font_size > 24
                assign fs_custom = 'fs-medium'
              else
                assign fs_custom = 'fs-custom'
              endif
              assign font_weight = block_st.font_weight
            -%}
            {%- case block.type -%}
              {%- when 'heading' -%}
                <h2
                  class="sec__content-heading {% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }} {% endif %} heading-letter-spacing mt-0 {{ mb_custom }} {{ uppercase }} {{ fs_custom }} {{ font_weight }}"
                  style="
                    --font-size: {{ block_st.font_size }};--space-bottom: {{ block_st.spacing_bottom }};{%- if scroll_animation != 'none' -%}
                      --animation-order: {{  forloop.index }}
                    {% endif %}
                  "
                  {{ block.shopify_attributes }}
                >
                  {{ block_st.heading }}
                </h2>
              {%- when 'subheading' -%}
                <div
                  class="sec__content-subheading heading-color {% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }} {% endif %} {{ mb_custom }} {{ uppercase }} {{ fs_custom }} {{ font_weight }}"
                  style="
                    --font-size: {{ block_st.font_size }};--space-bottom: {{ block_st.spacing_bottom }};{%- if scroll_animation != 'none' -%}
                      --animation-order: {{  forloop.index }}
                    {% endif %}
                  "
                  {{ block.shopify_attributes }}
                >
                  {{ block_st.subheading | escape }}
                </div>
              {%- when 'description' -%}
                <div
                  class="sec__content-des rich__text-m0 {% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }} {% endif %} {{ mb_custom }} {{ uppercase }} {{ fs_custom }} {{ font_weight }}"
                  style="
                    --font-size: {{ block_st.font_size }};--space-bottom: {{ block_st.spacing_bottom }};{%- if scroll_animation != 'none' -%}
                      --animation-order: {{  forloop.index }}
                    {% endif %}
                  "
                  {{ block.shopify_attributes }}
                >
                  {{ block_st.description }}
                </div>
              {%- when 'button' -%}
                {% if block_st.first_button_label != blank or block_st.second_button_label != blank %}
                  <div
                    class="sec__content-btn align-center flex flex-wrap {% if scroll_animation != 'none' %} scroll-trigger {{ scroll_animation }} {% endif %} gap-15 justify-content-{{ section_st.content_alignment }} {{ mb_custom }}"
                    style="
                      --space-bottom: {{ block_st.spacing_bottom }};{%- if scroll_animation != 'none' -%}
                        --animation-order: {{  forloop.index }}
                      {% endif %}
                    "
                  >
                    {% if block_st.first_button_label != blank %}
                      <a
                        {% if block_st.first_button_link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block_st.first_button_link | default: "#" }}"
                        {% endif %}
                        aria-label="{{ block_st.first_button_label }}"
                        class="{{ settings.btn_animation }} relative z-3 inline-flex no-underline btn-{{ block_st.first_button_type }}  {% if block_st.first_button_type != 'link' %}px-md-20 py-md-10 {% if section_st.small_button_style == false %}p-lg-content-btn{% endif %}{% endif %}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block_st.first_button_label }}
                      </a>
                    {% endif %}
                    {% if block_st.second_button_label != blank %}
                      <a
                        {% if block_st.second_button_link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block_st.second_button_link | default: "#" }}"
                        {% endif %}
                        aria-label="{{ block_st.second_button_label }}"
                        class="{{ settings.btn_animation }} relative z-3 inline-flex no-underline btn-{{ block_st.second_button_type }}  {% if block_st.second_button_type != 'link' %}px-md-20 py-md-10 {% if section_st.small_button_style == false %}p-lg-content-btn{% endif %}{% endif %}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block_st.second_button_label }}
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

