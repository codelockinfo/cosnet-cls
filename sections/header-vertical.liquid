                  <path
                    d="M7.50009 0.877014C3.84241 0.877014 0.877258 3.84216 0.877258 7.49984C0.877258 11.1575 3.8424 14.1227 7.50009 14.1227C11.1578 14.1227 14.1229 11.1575 14.1229 7.49984C14.1229 3.84216 11.1577 0.877014 7.50009 0.877014ZM1.82726 7.49984C1.82726 4.36683 4.36708 1.82701 7.50009 1.82701C10.6331 1.82701 13.1729 4.36683 13.1729 7.49984C13.1729 10.6328 10.6331 13.1727 7.50009 13.1727C4.36708 13.1727 1.82726 10.6328 1.82726 7.49984ZM8 4.50001C8 4.22387 7.77614 4.00001 7.5 4.00001C7.22386 4.00001 7 4.22387 7 4.50001V7.50001C7 7.63262 7.05268 7.7598 7.14645 7.85357L9.14645 9.85357C9.34171 10.0488 9.65829 10.0488 9.85355 9.85357C10.0488 9.65831 10.0488 9.34172 9.85355 9.14646L8 7.29291V4.50001Z"
                    fill="currentColor"
                  />
                </symbol>
                <symbol id="icon-search">
                  <path d="M11.048 17.89a6.923 6.923 0 1 0 0-13.847 6.923 6.923 0 0 0 0 13.847z" stroke="currentColor" stroke-width="1.2" stroke-miterlimit="10" stroke-linecap="round"></path>
                  <path d="m16 16 4.308 4.308" stroke="currentColor" stroke-width="1.2" stroke-miterlimit="10"></path>
                </symbol>
                <symbol id="icon-account">
                  <path d="M12 12.413a4.358 4.358 0 1 0 0-8.715 4.358 4.358 0 0 0 0 8.715zM3.488 20.857c0-3.085 1.594-5.61 5.26-5.61h6.503c3.667 0 5.261 2.525 5.261 5.61" stroke="currentColor" stroke-width="1.2" stroke-miterlimit="10"></path>
                </symbol>
                <symbol id="icon-phone-header">
                <path stroke="currentColor" d="M18,9 L16,9 C14.8954305,9 14,9.8954305 14,11 L14,13 C14,14.1045695 14.8954305,15 16,15 L16,15 C17.1045695,15 18,14.1045695 18,13 L18,9 C18,4.02943725 13.9705627,0 9,0 C4.02943725,0 0,4.02943725 0,9 L0,13 C1.3527075e-16,14.1045695 0.8954305,15 2,15 L2,15 C3.1045695,15 4,14.1045695 4,13 L4,11 C4,9.8954305 3.1045695,9 2,9 L0,9" transform="translate(3 3)"/> <path stroke="currentColor" d="M21,14 L21,18 C21,20 20.3333333,21 19,21 C17.6666667,21 16,21 14,21"/>
                </symbol>
              </svg>
              {%- liquid
                if my_account
                  render 'my-account' | type : 'header_mega'
                endif
                if wishlist
                  render 'wishlist' | type : 'header_mega'
                endif
                if minicart and theme_st.enable_catalog_mode == false
                  render 'minicart_header' | type : 'header_mega'
                endif
              -%}
            </div>
          </div>
        </header-inner>
      </div>
    </div>
    {% if section_st.header_vertical_layout == 'layout_1' %}
      <div class="header-bottom__navigation  header-bottom__navigation_vertical{% if show_separator_header_line == true %} border-top-1025 {% endif %} color-{{ color_scheme_middle_bottom }} gradient">
        <div class="{{ section_width }}">
          <header-inner>
            <div
              class="header__menu flex justify-between align-center"
              style="--section-pt: 0; --section-pb: 0;gap:3rem;"
            >
              {%- if section_st.categories_menu != blank -%}
                <div class="header__menu-vertical">
                  {% render 'vertical-menu-header' %}
                </div>
              {% endif %}
              <div class="flex-1 header__menu-nav hidden block-1025 header-search__mega {% if theme_st.search_type != 'default' %}flex justify-content-end{% endif %}">
                {%- liquid
                  render 'horizontal-menu' , show_language: show_language  | type: 'header_vertical'
                -%}
              </div>
              <div class="header-information relative z-1 flex gap-30 justify-between align-center">
                {% liquid
                  if recently_viewed
                    render 'recently-viewed' | type: 'header_mega'
                  endif
                %}
                {% if show_language or show_currency %}
                  <div class="lang__currency-desktop gap-30 hidden flex-1025">
                    {% if show_language %}
                      {% render 'language-switcher' %}
                    {% endif %}
                    {% if show_currency %}
                      {% render 'country-switcher' %}
                    {% endif %}
                  </div>
                {% endif %}
                {%- if section_st.header_link != blank -%}
                  <ul class="linklist-mega list-unstyled flex flex-wrap gap-30 hidden-mobile">
                    {%- for link in section_st.header_link.links -%}
                      <li class="relative">
                        <a class="no-underline heading-style" href="{{ link.url }}" aria-label="{{ link.title }}">
                          {{- link.title -}}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {% endif %}
              </div>
            </div>
          </header-inner>
        </div>
      </div>
    {% endif %}
  </div>
</header>
{% if section_st.header_vertical_layout == 'layout_2' %}
  <div class="relative z-10 z-1025-9 header-bottom__navigation_layout2 header-bottom__navigation_vertical{% if show_separator_header_line == true %} border-top-md {% endif %} color-{{ color_scheme_middle_bottom }} gradient">
    <div class="{{ section_width }}">
      <header-inner>
        <div
          class="header__menu flex justify-between align-center gap-1025-30"
          style="--section-pt: 0; --section-pb: 0;"
        >
          {%- if section_st.categories_menu != blank -%}
            <div class="header__menu-vertical vertical-layout2">
              {% render 'vertical-menu-header' %}
            </div>
          {% endif %}
          <div class="hidden block-md flex-1 z-1 py-8 header-search header-search__mega {% if theme_st.search_type != 'default' %}flex justify-content-end{% endif %}">
            {%- liquid
              if top_search
                render 'top-search-header' | type: 'header_vertical'
              endif
            -%}
          </div>
          <div class="header-information relative z-1 flex gap-30 justify-between align-center">
            {% liquid
              if recently_viewed
                render 'recently-viewed' | type: 'header_mega'
              endif
            %}
            {% if show_language or show_currency %}
              <div class="lang__currency-desktop gap-30 hidden flex-1025">
                {% if show_language %}
                  {% render 'language-switcher' %}
                {% endif %}
                {% if show_currency %}
                  {% render 'country-switcher' %}
                {% endif %}
              </div>
            {% endif %}
            {%- if section_st.header_link != blank -%}
              <ul class="linklist-mega list-unstyled flex flex-wrap gap-30 hidden-mobile">
                {%- for link in section_st.header_link.links -%}
                  <li class="relative">
                    <a class="no-underline heading-style" href="{{ link.url }}" aria-label="{{ link.title }}">
                      {{- link.title -}}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {% endif %}
          </div>
        </div>
      </header-inner>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.header.header_vertical",
  "limit": 1,
  "class": "section-header header-vertical",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "container",
          "label": "t:sections.all.section_width.container.label"
        },
        {
          "value": "fluid_container",
          "label": "t:sections.all.section_width.fluid_container.label"
        },
        {
          "value": "stretch_width",
          "label": "t:sections.all.section_width.stretch_width.label"
        },
        {
          "value": "full_width",
          "label": "t:sections.all.section_width.full_width.label"
        }
      ],
      "default": "stretch_width",
      "label": "t:sections.all.section_width.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.color_scheme.label",
      "default": "default-color-scheme"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.header_bottom.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme_middle_bottom",
      "label": "t:sections.all.color_scheme.label",
      "default": "default-color-scheme"
    },
    {
      "type": "checkbox",
      "id": "show_separator_header_line",
      "label": "t:sections.top-bar.settings.show_separator_line.label",
      "default": true
    },
    {
      "type": "link_list",
      "id": "header_link",
      "label": "t:sections.top-bar.blocks.link_list.settings.menu.label"
    },
    {
      "type": "header",
      "content": "t:sections.top-bar.blocks.store_information.name"
    },
    {
      "type": "text",
      "id": "text_phone",
