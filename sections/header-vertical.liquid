{%- liquid
  assign section_st = section.settings
  assign theme_st = settings
  assign section_width = section_st.section_width
  assign sticky_header_type = section_st.sticky_header_type
  assign sticky_mobile = section_st.sticky_header_mobile
  assign color_scheme = section_st.color_scheme
  assign color_scheme_middle_bottom = section_st.color_scheme_middle_bottom
  assign top_search = section_st.show_search
  assign my_account = section_st.show_account_icon
  assign recently_viewed = section_st.show_recently_viewed
  assign wishlist = section_st.show_wishlist_icon
  assign minicart = section_st.show_shopping_cart
  assign show_separator_header_line = section_st.show_separator_header_line
  assign show_language = section_st.show_language
  assign show_currency = section_st.show_currency
  assign categories_menu = section_st.categories_menu
-%}
{%- capture style -%}
  --section-pt: {{ section_st.padding_top }}; 
  --section-pb: {{ section_st.padding_bottom }};
  padding:0;
  {%- endcapture -%}
{% if settings.search_type == 'default' %}
  {%- style -%}
    @media screen and (min-width: 768px) {
      header-inner.show-search-form.logo-left {
        grid-template-columns: auto auto 1fr;
      }
    }
  {%- endstyle -%}
{% endif %}

{% if categories_menu != blank %}
  {{ 'menu-vertical.css' | asset_url | stylesheet_tag: preload: 'high' }}
  <script>
    (function () {
      document.body.classList.add('enable-vertical-menu');
      document.documentElement.style.setProperty('--vertical-menu-ready', '1');
      document.body.classList.remove('no-vertical-menu');
      if (document.readyState === 'loading') {
        document.addEventListener(
          'DOMContentLoaded',
          function () {
            document.body.classList.add('enable-vertical-menu');
            document.documentElement.style.setProperty('--vertical-menu-ready', '1');
          },
          { once: true }
        );
      }
    })();
  </script>
{% endif %}
<header
  class="header relative gradient remove_spacing color-{{ color_scheme }} {% if request.page_type == 'index' and section_st.separator_line == 'homepage' %} border-bottom{% endif %}{% if section_st.separator_line == 'all-page' %} border-bottom{% endif %}{% if request.page_type != 'index' and section_st.separator_line == 'inner_page' %} border-bottom{% endif %} popup-search-mobile"
  data-section-id="{{ section.id }}"
  data-sticky="{{ sticky_header_type }}"
  data-sticky-mobile="{{ sticky_mobile }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div
    class="header__inner header__layout-3 header__layout-vertical{% if section_st.header_vertical_layout == 'layout_2' %} header__layout-vertical_menu{% endif %}"
    id="header-sticky"
  >
    <div class=" header-top__actions relative {% if section_st.header_vertical_layout == 'layout_2' %} header-top__actions_vertical{% endif %}">
      <div class="{{ section_width }}">
        <header-inner>
          <div class="header-mega-store header-mega-store-vertical section relative  {% if section_st.header_vertical_layout == 'layout_1' %}z-1 z-1025-16{% endif %} {% if section_st.padding_top < 30 %} pt-min{% endif %}{% if section_st.padding_bottom < 30 %} pb-min{% endif %} flex  gap-10 header-middle align-center justify-between hidden-sticky">
            <div class="block hidden-1025">
              {%- render 'toggle-menu' -%}
            </div>
            <div class="inline-flex align-center col-logo w-1025-240 {% if section_st.header_vertical_layout == 'layout_2' %}z-1{% endif %} ">
              {%- render 'logo' -%}
            </div>

            <div class="{% if section_st.header_vertical_layout == 'layout_2' %}hidden-md z-1{% endif %} header-search header-search__mega {% if theme_st.search_type != 'default' %}flex justify-content-end{% endif %}">
              {%- liquid
                if top_search
                  render 'top-search-header' | type: 'header_vertical'
                endif
              -%}
            </div>
            {% if section_st.header_vertical_layout == 'layout_2' %}
              <div class="header__menu-nav header__menu-nav_vertical hidden block-1025 flex-1">
                {%- liquid
                  render 'horizontal-menu' , show_language: show_language | type: 'header_vertical'
                -%}
              </div>
            {% endif %}

            <div class="header__action flex gap flex-end align-center">
              {%- if section_st.show_phone and theme_st.store_phone != blank -%}
                <a
