    {
      "type": "checkbox",
      "id": "show_phone",
      "label": "t:sections.top-bar.blocks.store_information.settings.show_phone.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_login_popup",
      "default": true,
