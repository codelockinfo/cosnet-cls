{% doc %}
  @prompt
    company information
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-company-info-{{ai_gen_id}} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-company-info-container-{{ai_gen_id}} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-company-info-header-{{ai_gen_id}} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.spacing_between_sections }}px;
  }

  .ai-company-info-heading-{{ai_gen_id}} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
  }

  .ai-company-info-description-{{ai_gen_id}} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-company-info-grid-{{ai_gen_id}} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.spacing_between_sections }}px;
  }

  .ai-company-info-item-{{ai_gen_id}} {
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border: 1px solid {{ block.settings.item_border_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-company-info-icon-{{ai_gen_id}} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-company-info-icon-{{ai_gen_id}} svg {
    width: 100%;
    height: 100%;
  }

  .ai-company-info-item-title-{{ai_gen_id}} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 600;
    margin: 0 0 {{ block.settings.item_title_spacing }}px;
  }

  .ai-company-info-item-text-{{ai_gen_id}} {
    font-size: {{ block.settings.item_text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-company-info-item-text-{{ai_gen_id}} a {
    color: {{ block.settings.link_color }};
    text-decoration: none;
  }

  .ai-company-info-item-text-{{ai_gen_id}} a:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  @media screen and (max-width: 989px) {
    .ai-company-info-grid-{{ai_gen_id}} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-company-info-{{ai_gen_id}} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-company-info-grid-{{ai_gen_id}} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-company-info-heading-{{ai_gen_id}} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<company-info-{{ai_gen_id}} class="ai-company-info-{{ai_gen_id}}" {{ block.shopify_attributes }}>
  <div class="ai-company-info-container-{{ai_gen_id}}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-company-info-header-{{ai_gen_id}}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-company-info-heading-{{ai_gen_id}}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-company-info-description-{{ai_gen_id}}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-company-info-grid-{{ai_gen_id}}">
      {% if block.settings.show_phone and block.settings.phone != blank %}
        <div class="ai-company-info-item-{{ai_gen_id}}">
          <div class="ai-company-info-icon-{{ai_gen_id}}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <h3 class="ai-company-info-item-title-{{ai_gen_id}}">{{ block.settings.phone_label }}</h3>
          <div class="ai-company-info-item-text-{{ai_gen_id}}">
            <a href="tel:{{ block.settings.phone | replace: ' ', '' }}">{{ block.settings.phone }}</a>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_email and block.settings.email != blank %}
        <div class="ai-company-info-item-{{ai_gen_id}}">
          <div class="ai-company-info-icon-{{ai_gen_id}}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h3 class="ai-company-info-item-title-{{ai_gen_id}}">{{ block.settings.email_label }}</h3>
          <div class="ai-company-info-item-text-{{ai_gen_id}}">
            <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_address and block.settings.address != blank %}
        <div class="ai-company-info-item-{{ai_gen_id}}">
          <div class="ai-company-info-icon-{{ai_gen_id}}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <h3 class="ai-company-info-item-title-{{ai_gen_id}}">{{ block.settings.address_label }}</h3>
          <div class="ai-company-info-item-text-{{ai_gen_id}}">{{ block.settings.address }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_hours and block.settings.hours != blank %}
        <div class="ai-company-info-item-{{ai_gen_id}}">
          <div class="ai-company-info-icon-{{ai_gen_id}}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <h3 class="ai-company-info-item-title-{{ai_gen_id}}">{{ block.settings.hours_label }}</h3>
          <div class="ai-company-info-item-text-{{ai_gen_id}}">{{ block.settings.hours }}</div>
        </div>
      {% endif %}
    </div>
  </div>
</company-info-{{ai_gen_id}}>

<script>
  (function() {
    class CompanyInfo{{ai_gen_id}} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('company-info-{{ai_gen_id}}', CompanyInfo{{ai_gen_id}});
  })();
</script>

